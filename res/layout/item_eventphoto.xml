<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/photo_taken_by"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#003DF5"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/event_photo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/photo_taken_by"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:contentDescription="" />

    <TextView
        android:id="@+id/photo_upload_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo_description"
        android:textColor="#003DF5"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/photo_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_photo"
        android:textSize="15dp" />

</RelativeLayout>